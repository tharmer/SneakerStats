<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Style</th>
      <th>Buy</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @sneakers.each do |sneaker| %>
      <tr>
        <td><%= sneaker.brand%></td>
        <td><%= link_to sneaker.name %></td>
        <td><%= sneaker.style %></td>
        <td><%= link_to sneaker.buy, sneaker.buy %></td> 
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_sneaker_path(sneaker) %></td>
          <td><%= link_to 'Destroy', sneaker, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>